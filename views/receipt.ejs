<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Fees Receipt</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 30px;
            font-size: 13px;
        }
        .receipt-box {
            border: 1px solid #000;
            padding: 10px;
            width: 400px;
            margin: auto;
            display: inline-block;
        }
        h2 {
            text-align: center;
            margin-bottom: 0px;
            display: inline-block;
            position: relative;
            top: -20px;
            left: 30px;
        }
        h3{
            margin: 0;
        }
        table {
            width: 100%;
            margin-top: 5px;
        }
        td {
            padding: 5px;
        }
        .print-btn {
            margin-top: 20px;
            display: flex;
            justify-content: center;
        }
        .right {
            text-align: right;
        }
        .school-logo{
            height: 80px;
            width: 80px;
            display: inline-block;
        }
        img{
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>

   <div class="receipt-box">
        <h3 style="text-align: center;">School Copy</h3>
        <div class="school-logo">
            <img src="/images/logo.jpeg">
        </div>
        <h2>Little Flower Playgroup <br> Fees Receipt</h2>
<hr>
        <table>
            <tr>
                <td><strong>Receipt No:</strong> <%= receiptNo %></td>
                <td class="right"><strong>Date:</strong>
  <% const receiptDate = new Date(date); %>
  <%= ("0" + receiptDate.getDate()).slice(-2) %>-<%= ("0" + (receiptDate.getMonth() + 1)).slice(-2) %>-<%= receiptDate.getFullYear() %>
</td>
            </tr>
            <tr>
                <td><strong>Session:</strong> <%= session %></td>
                <td class="right"><strong>Class:</strong> <%= studentClass %></td>
            </tr>
            <tr>
                <td><strong>Student Name:</strong> <%= studentName %></td>
                <td class="right"><strong>Father Name:</strong> <%= fatherName %></td>
            </tr>
            <tr>
                <td><strong>Tuition Fees:</strong> ₹<%= tuitionFees %></td>
                <td class="right"><strong>Transport Fees:</strong> ₹<%= transportFees %></td>
            </tr>
            <tr>
                <td><strong>Discount:</strong> ₹<%= discount %></td>
                <td class="right"><strong>Total:</strong> ₹<%= total %></td>
            </tr>
            <tr>
                <td colspan="2"><strong>Total Amount Paid:</strong> ₹<%= totalAmount %></td>
            </tr>
            <tr>
                <td colspan="2"><strong>Remaining Fees:</strong> ₹<%= remainingFees %></td>
            </tr>

            <% if (isCash === 'yes') { %>
            <tr>
                <td colspan="2"><strong>Paid by Cash:</strong> ₹<%= cashAmount %></td>
            </tr>
            <% } %>

            <% if (isOnline === 'yes') { %>
            <tr>
                <td colspan="2"><strong>Paid Online:</strong> ₹<%= onlineAmount %></td>
            </tr>
            <tr>
                <td colspan="2"><strong>UTR No:</strong> <%= utrNumber %></td>
            </tr>
            <% } %>

            <% if (remark && remark.trim() !== '') { %>
            <tr>
                <td colspan="2"><strong>Remark:</strong> <%= remark %></td>
            </tr>
            <tr>
                <td colspan="2"><strong>Date:</strong></td>
            </tr>
            <% } %>

            <tr>
                <td colspan="2" class="right" style="padding-top: 40px;">
                    <strong>ACOUNTANT <br> SIGN &nbsp;&nbsp;&nbsp;&nbsp;</strong>
                    <br><br>
                </td>
            </tr>
        </table>
    </div>
