<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>View Students</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <nav>
        <a href="/">Home</a> |
        <a href="/students">View Students</a> |
        <a href="/students/add">Add Student</a> |
        <% if (loggedIn) { %> <!-- Only show logout if logged in -->
            <a href="/logout">Logout</a> |
        <% } %>
    </nav>

    <h1>All Students</h1>

    <!-- Search Form -->
    <form method="GET" action="/students">
        <input type="text" name="search" placeholder="Search by name or roll number" value="<%= searchQuery %>">
        <button type="submit">Search</button>
    </form>

    <table border="1" align="center" cellpadding="10">
        <thead>
            <tr>
<th>Name</th>
<th>Father Name</th>
<th>Mother Name</th>
<th>Class</th>
<th>DOB</th>
<th>Mobile</th>
<th>Place</th>
<th>Aadhar No</th>
<th>SR No</th>
<th>Samagra ID</th>
<th>Gender</th>
<th>Category</th>
<th>Date of Admission</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach(student => { %>
                <tr>
                    <td><%= student.name %></td>
<td><%= student.fatherName %></td>
<td><%= student.motherName %></td>
<td><%= student.class %></td>
<td><%= student.dateOfBirth ? new Date(student.dateOfBirth).toISOString().substring(0,10) : '' %></td>
<td><%= student.mobileNumber %></td>
<td><%= student.place %></td>
<td><%= student.aadharNumber %></td>
<td><%= student.srNumber %></td>
<td><%= student.samagraId %></td>
<td><%= student.gender %></td>
<td><%= student.category %></td>
<td><%= student.dateOfAdmission ? new Date(student.dateOfAdmission).toISOString().substring(0,10) : '' %></td>

                    <td><a href="/students/attendance/view/<%= student._id %>">View Attendance</a></td>

                    <td>
                        <!-- Delete Button -->
                        <form action="/students/delete/<%= student._id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                        <!-- Update Button -->
                        <a href="/students/update/<%= student._id %>">
                            <button>Update</button>
                            <a href="/students/attendance/<%= student._id %>">
                                <button>Mark Attendance</button>
                            </a>
                        </a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <% if (students.length === 0) { %>
        <p>No students found</p>
    <% } %>

    <!-- Pagination Controls -->
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/students?page=<%= currentPage - 1 %>&search=<%= searchQuery %>">Previous</a>
        <% } %>
        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/students?page=<%= i %>&search=<%= searchQuery %>" 
                class="<%= i === currentPage ? 'active' : '' %>">
                <%= i %>
            </a>
        <% } %>
        <% if (currentPage < totalPages) { %>
            <a href="/students?page=<%= currentPage + 1 %>&search=<%= searchQuery %>">Next</a>
        <% } %>
    </div>

</body>
</html>
